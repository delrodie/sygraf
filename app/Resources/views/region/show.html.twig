{% extends 'base.html.twig' %}

{% block body %}
    <h1>Region</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ region.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ region.libelle }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if region.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ region.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ region.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ region.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ region.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ region.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_region_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_region_edit', { 'id': region.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
