{% extends 'base.html.twig' %}

{% block body %}
    <h1>Formation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Promotion</th>
                <td>{{ formation.promotion }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ formation.lieu }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ formation.debut }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ formation.fin }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ formation.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ formation.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ formation.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ formation.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ formation.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('formation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('formation_edit', { 'id': formation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
