{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} :: Gestion des types de formation{% endblock %}
{% block body %}
    <div class="row clearfix">
        <div class="col-12">
            <div class="card">
                <div class="body">
                    {{ form_start(form) }}
                    <div class="row clearfix">

                        <div class="col-12">
                            <h6>Enregistrement </h6>
                        </div>
                        <div class="col-md-4 col-sm-4">
                            <div class="form-group">
                                {{ form_widget(form.libelle) }}
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-3">
                            <div class="form-group">
                                {{ form_widget(form.code) }}
                            </div>
                        </div>
                        <div class="col-md-2 col-sm-3">
                            <div class="form-group">
                                <label class="fancy-checkbox">
                                    {{ form_widget(form.statut) }}
                                    <span>Activ√©</span>
                                </label>

                            </div>
                        </div>
                        <div class="col-md-2 col-sm-2 text-center">
                            <input type="submit" value="Ajouter" class="btn btn-primary" />
                        </div>

                    </div>
                    {{ form_end(form) }}
                    <div class="row clearfix" style="margin-top: 50px;">
                        <div class="col-12">
                            <h6>Liste des formations</h6>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                    <tr class="text-center">
                                        <th>ID</th>
                                        <th>FORMATIONS</th>
                                        <th>CODES</th>
                                        <th>STATUTS</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for formation in typeFormations %}
                                        <tr>
                                            <td class="text-center">{{ loop.index }}</td>
                                            <td>{{ formation.libelle }}</td>
                                            <td class="text-center">{{ formation.code }}</td>
                                            <td class="text-center">
                                                {% if formation.statut %}
                                                    <label class="fancy-checkbox">
                                                        <input class="checkbox-tick" type="checkbox" name="checkbox" checked readonly>
                                                        <span></span>
                                                    </label>
                                                {% else %}
                                                    <label class="fancy-checkbox">
                                                        <input class="checkbox-tick" type="checkbox" name="checkbox" readonly>
                                                        <span></span>
                                                    </label>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <a href="{{ path('typeformation_edit', {'slug': formation.slug}) }}" title="Modifier"><i class="fa fa-edit"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ absolute_url(asset('assets/bundles/easypiechart.bundle.js')) }}"></script>
    <script src="{{ absolute_url(asset('assets/bundles/mainscripts.bundle.js')) }}"></script>
{% endblock %}
